<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.plu.cs.retagitlocal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:debuggable="true">
        <activity
            android:name="edu.plu.cs.retagitlocal.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.plu.cs.retagitlocal.AddNewItemActivity"
            android:label="@string/title_activity_add_to_inventory" >
        </activity>
        <activity
            android:name="edu.plu.cs.retagitlocal.AddNewClerkActivity"
            android:label="@string/title_activity_add_new_clerk" >
        </activity>
        <activity
            android:name="com.dm.zbar.android.scanner.ZBarScannerActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="edu.plu.cs.retagitlocal.LogOnActivity"
            android:label="@string/title_activity_log_on" >
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.plu.cs.retagitlocal.SellItemActivity"
            android:label="@string/title_activity_sell_item" >
        </activity>
        <activity
            android:name="edu.plu.cs.retagitlocal.EditItemActivity"
            android:label="@string/title_activity_edit_item" >
        </activity>
        <activity
            android:name="edu.plu.cs.retagitlocal.GetSellingItem"
            android:label="@string/title_activity_get_selling_item" >
        </activity>
        <activity
            android:name="edu.plu.cs.retagitlocal.ViewItemActivity"
            android:label="@string/title_activity_view_item" >
        </activity>
        <activity
            android:name="edu.plu.cs.retagitlocal.BrowseItemActivity"
            android:label="@string/title_activity_browse_item" >
        </activity>
    </application>

</manifest>
